<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:top="250dp">
        <shape
            android:shape="rectangle">
            <gradient
                android:type="linear"
                android:angle="180"
                android:startColor="@color/sunset_orange"
                android:centerColor="@color/white"
                android:endColor="@color/hera_blue"/>
        </shape>
    </item>

    <item android:bottom="250dp">
        <shape android:shape="rectangle">
            <gradient
                android:angle="180"
                android:centerColor="@color/white"
                android:endColor="@color/vivid_sky_blue"
                android:startColor="@color/honey_crusted_chicken"
                android:type="linear" />

        </shape>
    </item>

</layer-list>